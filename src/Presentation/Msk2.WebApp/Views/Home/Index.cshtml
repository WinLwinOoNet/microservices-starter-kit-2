@{
    ViewData["Title"] = "Home Page";
}
@model TransferViewModel

<div class="text-center">
    <h1 class="display-4">Transfer Funds</h1>
</div>

<form asp-controller="Home" asp-action="Transfer" method="post" role="form">
    <div class="form-group">
        <label asp-for="FromAccount">From Account:</label>
        <input type="text" name="FromAccount" class="form-control" placeholder="1" />
    </div>
    <div class="form-group">
        <label asp-for="ToAccount">To Account:</label>
        <input type="text" name="ToAccount" class="form-control" placeholder="2" />
    </div>
    <div class="form-group">
        <label asp-for="TransferAmount">Transfer Amount:</label>
        <input type="text" name="TransferAmount" class="form-control" placeholder="50.00" />
    </div>
    <input type="submit" value="Submit" class="btn btn-primary" />
</form>